<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC03_MODULE2.activity5">
    <ContentPage.Content>
        <StackLayout>
            
            <ListView x:Name="lst"
                      ItemsSource="{Binding Employees}">
                <ListView.ItemTemplate>
                    <DataTemplate>

                        <ImageCell ImageSource="" Text="{Binding DisplayName}" Detail="{Binding Position}"
                                   TextColor="Blue" DetailColor="Green"/>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>